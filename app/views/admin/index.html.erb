<h1>Listing campaigns</h1>

<table>
  <thead>
    <tr>
      <th>Start date</th>
      <th>End date</th>
      <th>Name</th>
      <th>Duration</th>
      <th>Amount funded</th>
      <th>About</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.start_date %></td>
        <td><%= campaign.end_date %></td>
        <td><%= campaign.user.name %></td>
        <td><%= campaign.duration %></td>
        <td><%= campaign.amount_funded %></td>
        <td><%= campaign.user.about_me %></td>
        <td><%= link_to 'Show', campaign %></td>
        <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
        <% if campaign.status == 'pending' %>
        <td><%= link_to 'Approve', :controller => "admin", :action => "approve", :id => campaign.username %></td>
        <% else %>
        <td>Approved</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
